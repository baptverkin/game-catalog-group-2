
{% extends "layout.njk" %}

{% block content %}
  <center><h1>List of games</h1></center><br>

  <center><h3>Page: {{ pageNumber }}</h3></center><br>
  {% if pageNumber <= 1 %}
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <li class="page-item disabled"><a class="shadow mb-5 rounded page-link">Previous page</a></li>
      <li class="page-item"><a class="page-link shadow mb-5 rounded" href="/games?page={{pageNumber+1}}">Next page</a></li>
    </ul>
  </nav>
  {% elif pageNumber >= 10 %}
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <li class="page-item"><a class="shadow mb-5 rounded page-link" href="/games?page={{pageNumber-1}}">Previous page</a></li>
      <li class="page-item disabled"><a class="shadow mb-5 rounded page-link">Next page</a></li>
    </ul>
  </nav>
{% else %}
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <li class="page-item"><a class="shadow mb-5 rounded page-link" href="/games?page={{pageNumber-1}}">Previous page</a></li>
      <li class="page-item"><a class="shadow mb-5 rounded page-link" href="/games?page={{pageNumber+1}}">Next page</a></li>
    </ul>
  </nav>
{% endif %}

  <div class="cards">
    {% for index in games %}
    <div class="card bg-light mb-3 shadow mb-5 rounded">
        <center>
          <fieldset>
            <a href=/game/{{index.slug}}>
              {{index.name}}<br><br>
              {% if index.cover.url %}
                <img src={{index.cover.url}}><br>
              {% else %}
                <img src="/images/No_image_available.png" height="160px" width="160px">
              {% endif %}
            </a>
          </fieldset>
        <center>
      </div>
    {% endfor %}
  </div>

  {% if pageNumber <= 1 %}
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <li class="page-item disabled"><a class="shadow mb-5 rounded page-link">Previous page</a></li>
      <li class="page-item"><a class="page-link shadow mb-5 rounded" href="/games?page={{pageNumber+1}}">Next page</a></li>
    </ul>
  </nav>
  {% elif pageNumber >= 10 %}
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <li class="page-item"><a class="shadow mb-5 rounded page-link" href="/games?page={{pageNumber-1}}">Previous page</a></li>
      <li class="page-item disabled"><a class="shadow mb-5 rounded page-link">Next page</a></li>
    </ul>
  </nav>
{% else %}
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <li class="page-item"><a class="shadow mb-5 rounded page-link" href="/games?page={{pageNumber-1}}">Previous page</a></li>
      <li class="page-item"><a class="shadow mb-5 rounded page-link" href="/games?page={{pageNumber+1}}">Next page</a></li>
    </ul>
  </nav>
{% endif %}

{% endblock %}
