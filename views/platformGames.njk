{% extends "layout.njk" %}

{% block content %}

  <center><h1>All games for {{platformGames[0].platform.name}}</h1></center><br><br>

  <div class="cards">
    {% for games in platformGames %}
    <div class="card bg-light mb-3 shadow mb-5 rounded">
        <center>
          <fieldset>
            <a href=/game/{{games.slug}}>
              {{games.name}}<br><br>
              {% if games.cover.url %}
                <img src={{games.cover.url}}><br>
              {% else %}
                <img src="/images/No_image_available.png" height="160px" width="160px">
              {% endif %}
            </a>
          </fieldset>
        <center>
      </div>
    {% endfor %}
  </div>

{% endblock %}
