{% extends "layout.njk" %}

{% block content %}
  <h1>All games for {{platformGames[0].platform.name}}</h1>

  <ul>
    {% for games in platformGames %}

    <a href=/game/{{games.slug}}>
      <li>
      {{games.name}}<br><img src={{games.cover.url}}><br>
      </li>
      </a>
    {% endfor %}
  </ul>

{% endblock %}
